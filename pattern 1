  #include <stdio.h>

int main() {
	int n, i, j;
	scanf("%d", &n);
	
	for (i = 0; i < (n/2) + 2; i++){
		for (j = 0; j < n - i; j++){
			printf(" ");
		}
		for (j = 0; j < 2 * i + 1; j++){
			printf("@");
		}
		printf("\n");
	}
	
	for (i = 0; i < n; i++){
		for (j = 0; j < (n/2) + 1; j++){
			if (j >= n / 2 - i && j >= i - n / 2){
				printf("*");
			}
			else
			printf(" ");
		}
		for (j = 0; j < n; j++){
			if (i == n / 2)
				printf("@");
			else
				printf(" ");
		}
		for (j = 0; j < (n / 2) + 1; j++){
			if (j >= n / 2 - i && j >= i - n / 2)
				printf("*");
		}
		printf("\n");
	}
	return 0;
}

